<div class="row">
  <%- if @drink.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @drink.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Drink</h1>

    <%= form_for @drink do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :category_id %>
      <%= f.select :category_id, options_for_select(Category.pluck(:name, :id)) %>

      <%= f.label :alcohol_level, "Alcohol Level" %>
      <% Drink::ALCOHOL_LEVELS.each do |level| %>
        <%= f.radio_button :alcohol_level, level %>
        <%= f.label :alcohol_level, level, value: level %>
      <% end %>

      <%= f.label :featured %>
      <%= f.check_box :featured %>

      <%= f.submit "Add Drink" %>
    <%- end -%>
  </div>
</div>
